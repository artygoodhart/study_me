<div class="devise-container v-height">
  <%= render "users/shared/links" %>
  <div class="container">
    <h1>Forgot your password?</h1>
    <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { class: "devise center" } do |f| %>
    <div class="group">
      <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
    </div>
    <%= f.submit "Send me reset password instructions", class: "basic button" %>
    <% end %>
  </div>
</div>
