<div class="devise-container v-height">
  <%= render "users/shared/links" %>

  <div class="centered container">
    <h1>Sign Up</h1>

    <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise" } do |f| %>

    <div class="group">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", required: true %>
    </div>
    <div class="row">
      <div class="six columns">
        <%= f.label :type_participant, class: "inline round checkbox" do %>
        <%= f.radio_button :type, "Participant", required: true %>
        <span>I'm a participant</span>
        <% end %>
      </div>
      <div class="six columns">
        <%= f.label :type_researcher, class: "inline round checkbox" do %>
        <%= f.radio_button :type, "Researcher", required: true %>
        <span>I'm a researcher</span>
        <% end %>
      </div>
    </div>


      <div class="button-div">
        <%= link_to "Log In", new_user_session_path, class: "basic button" %>
      </div>
      <div class="button-div">
        <%= f.submit "Sign Up", class: "basic button #{active_class?(new_user_registration_path)}" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= devise_error_messages! %>
