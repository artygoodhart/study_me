<div class="create-new-university">
<%= link_to 'Add University', new_university_path %>
</div>

<%= form_for_filterrific @filterrific do |f| %>
  <%= f.text_field :search_query, class: 'filterrific-periodically observed', placeholder: "Search" %>

  <%= link_to 'Reset filters', reset_filterrific_url, class: "reset-filters" %>
<% end %>

<div id="filterrific_results">
  <%= render(partial: 'universities/partials/list', locals: { universities: @universities }) %>
</div>
