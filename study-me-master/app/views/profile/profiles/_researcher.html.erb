<div class="row studies-menu-bar">
  <button id="mobile-menu" class="center"> <i class="fa fa-angle-right mobile-rotate-arrow" aria-hidden="true"> </i> <%#= yield (:heading) %> <%= @section_title %> </button>

  <ul id="mobile-dropdown">
    <li>  <%= link_to "#{@my_studies.count} My Studies", profile_index_path(section: "my_studies"), class:"link-styling"%> </li>
    <li>  <%= link_to "#{@current_studies.count} Active Studies", profile_index_path(section: "current_studies"), class:"link-styling" %> </li>
    <li>  <%= link_to "#{@completed_studies.count} Completed Studies", profile_index_path(section: "completed_studies"), class:"link-styling" %> </li>
  </ul>

</div>

<%= render partial: 'profile/partials/profile_heading' %>

<hr class="dividing-line">

<div class="row profile-menu-bar">
  <div class="four columns center profile-sub-menu-bar">
    <%= link_to "#{@my_studies.count} </br> My Studies".html_safe, profile_index_path(section: "my_studies"), class:"link-styling"%>
  </div>
  <div class="four columns center profile-sub-menu-bar">
    <%= link_to "#{@current_studies.count} </br> Current studies".html_safe, profile_index_path(section: "current_studies"), class:"link-styling" %>
  </div>
  <div class="four columns center profile-sub-menu-bar">
    <%= link_to "#{@completed_studies.count} </br> Completed Studies".html_safe, profile_index_path(section: "completed_studies"), class:"link-styling" %>
  </div>

</div>
<div>
  <div class="create-new-study">
  <%= link_to 'Create study', new_study_path %>
  </div>
  <% if @studies == nil %>
    <div class="no-studies-welcome-message">
      <h1>Welcome to Study Me</h1>
      <h3>To start a new study click the button above to begin!</h3>
    </div>
  <% else %>
    <%= render partial: "profile/partials/studies_list" %>
  <% end %>
  <%#= render partial: "profile/partials/studies_list" %>
</div>
